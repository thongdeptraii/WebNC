@model QLNhaSach1.Models.ViewModels.BookViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewData["Title"] = "Thêm Sách Mới";
}

<h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Book.bookName" class="form-label">Tên sách</label>
            <input asp-for="Book.bookName" class="form-control" />
            <span asp-validation-for="Book.bookName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Book.author" class="form-label">Tác giả</label>
            <input asp-for="Book.author" class="form-control" />
            <span asp-validation-for="Book.author" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Book.description" class="form-label">Mô tả</label>
        <textarea asp-for="Book.description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Book.description" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="Book.quantity" class="form-label">Số lượng</label>
            <input asp-for="Book.quantity" class="form-control" type="number" min="1" />
            <span asp-validation-for="Book.quantity" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Book.price" class="form-label">Giá (VNĐ)</label>
            <input asp-for="Book.price" class="form-control" type="number" min="0" step="1000" />
            <span asp-validation-for="Book.price" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label d-block">Tình trạng</label>
            <div class="form-check">
                <input asp-for="Book.bookStatus" class="form-check-input" type="checkbox" />
                <label asp-for="Book.bookStatus" class="form-check-label">Còn hàng</label>
            </div>
            <span asp-validation-for="Book.bookStatus" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Book.CategoryId" class="form-label">Danh mục</label>
        <select asp-for="Book.CategoryId" class="form-select" asp-items="Model.Categories">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Book.ImageUrl" class="form-label">URL hình ảnh</label>
        <input asp-for="Book.ImageUrl" class="form-control" />
        <span asp-validation-for="Book.ImageUrl" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-start mt-4">
        <button type="submit" class="btn btn-primary me-2">Thêm sách</button>
        <a asp-action="Index" class="btn btn-primary" role="button">Quay lại</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
