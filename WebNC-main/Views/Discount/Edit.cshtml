@model QLNhaSach1.Models.Discount

<h2>Sửa mã giảm giá</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DiscountId" />

    <div class="form-group">
        <label>Mã giảm giá</label>
        <input asp-for="DiscountCode" class="form-control" />
    </div>

    <div class="form-group">
        <label>Phần trăm giảm (%)</label>
        <input asp-for="DiscountPercentage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Số tiền giảm tối đa</label>
        <input asp-for="MaxDiscountAmount" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày kết thúc</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Số lượng còn lại</label>
        <input asp-for="RemainingCount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
