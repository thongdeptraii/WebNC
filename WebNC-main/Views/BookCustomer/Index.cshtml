@model QLNhaSach1.ViewModels.BookListViewModel

@{
    ViewData["Title"] = "Sản phẩm";
    var sortBy = Context.Request.Query["sortBy"].ToString();
    var selectedAuthor = Model.SelectedAuthor ?? "";
    var selectedCategories = Context.Request.Query["categoryIds"].ToList();
    var minPrice = Context.Request.Query["minPrice"].ToString();
    var maxPrice = Context.Request.Query["maxPrice"].ToString();
}
<section id="book-list" class="bookshelf py-5 my-5">
    <div class="container">
        <div class="row">

            <!-- Sidebar Bộ lọc -->
            <div class="col-md-3 mb-4">
                <aside class="filter-sidebar">
                    <form asp-action="Index" method="get" id="filterForm" class="bg-white p-3 rounded shadow-sm">
                        <!-- Danh mục -->
                        <div class="mb-3">
                            <label class="form-label fw-bold mb-2"><i class="fa fa-list me-1"></i> Danh mục</label>
                            <div class="category-checkbox-list">
                                @foreach (var category in Model.AllCategories)
                                {
                                    <div class="form-check mb-1">
                                        <input class="form-check-input" type="checkbox" name="categoryIds" value="@category.CategoryId" id="cat_@category.CategoryId"
                                            @(selectedCategories.Contains(category.CategoryId.ToString()) ? "checked" : "") onchange="document.getElementById('filterForm').submit();">
                                        <label class="form-check-label" for="cat_@category.CategoryId">
                                            <i class="fa fa-book me-1 text-secondary"></i>@category.categoryName
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- Tác giả -->
                        <div class="mb-3">
                            <label class="form-label fw-bold mb-2"><i class="fa fa-user me-1"></i> Tác giả</label>
                            <select class="form-select" name="author" onchange="document.getElementById('filterForm').submit();">
                                <option value="">Tất cả tác giả</option>
                                @foreach (var author in Model.AllAuthors)
                                {
                                    if (selectedAuthor == author)
                                    {
                                        <option value="@author" selected>@author</option>
                                    }
                                    else
                                    {
                                        <option value="@author">@author</option>
                                    }
                                }
                            </select>
                        </div>
                        <!-- Khoảng giá -->
                        <div class="mb-3">
                            <label class="form-label fw-bold mb-2"><i class="fa fa-money-bill me-1"></i> Giá</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" class="form-control" placeholder="Từ..." value="@minPrice" />
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" class="form-control" placeholder="Đến..." value="@maxPrice" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-2"><i class="fa fa-search me-1"></i> Lọc</button>
                    </form>
                </aside>
            </div>

            <!-- Main content -->
            <div class="col-md-9">

                <!-- Sắp xếp + Tổng số -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="mb-0">Tìm thấy @Model.Books.Count() kết quả</h4>
                    </div>
                    <div>
                        <form asp-action="Index" method="get" class="d-flex align-items-center gap-2">
                            <label for="sortBy" class="form-label mb-0 me-2">Sắp xếp theo:</label>
                            <select name="sortBy" id="sortBy" class="form-select" onchange="this.form.submit()">
                                <option value="">-- Chọn --</option>
                                <option value="name_asc" selected="@(Context.Request.Query["sortBy"] == "name_asc")">Tên
                                    (A-Z)</option>
                                <option value="name_desc" selected="@(Context.Request.Query["sortBy"] == "name_desc")">
                                    Tên (Z-A)</option>
                                <option value="price_asc" selected="@(Context.Request.Query["sortBy"] == "price_asc")">
                                    Giá tăng dần</option>
                                <option value="price_desc"
                                    selected="@(Context.Request.Query["sortBy"] == "price_desc")">Giá giảm dần</option>
                            </select>
                        </form>
                    </div>
                </div>

                <!-- Danh sách sách -->
                <div class="grid product-grid">
                    @foreach (var book in Model.Books)
                    {
                        <div class="product-item">
                            <figure class="product-style">
                                <img src="@Url.Content(book.ImageUrl)" alt="@book.bookName" class="product-item" />
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="bookId" value="@book.bookId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="add-to-cart" data-product-tile="add-to-cart">Thêm vào
                                        giỏ</button>
                                </form>
                            </figure>
                            <figcaption>
                                <h3>@book.bookName</h3>
                                <span>Tác giả: @book.author</span>
                                <div class="item-price">@book.price.ToString("n0")₫</div>
                            </figcaption>
                        </div>
                    }
                </div>

                <!-- Phân trang -->
                <div class="mt-4 d-flex justify-content-center">
                    <nav>
                        <ul class="pagination">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-categoryId="@Model.SelectedCategoryId"
                                        asp-route-author="@Model.SelectedAuthor"
                                        asp-route-minPrice="@Context.Request.Query["minPrice"]"
                                        asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
                                        asp-route-sortBy="@Context.Request.Query["sortBy"]" asp-route-page="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

            </div><!-- End col-md-9 -->

        </div><!-- End row -->
</section>
